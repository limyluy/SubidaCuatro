<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividades.CrearLocal">

    <android.support.v7.widget.Toolbar
        android:id="@+id/too_crear_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_nom_local"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:hint="Nombre Completo Local"
        android:inputType="textCapWords"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/too_crear_local" />

    <TextView
        android:id="@+id/txt_link_local"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="link"
        android:textSize="8sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_subir_img_local"
        app:layout_constraintTop_toBottomOf="@+id/img_local2" />

    <TextView
        android:id="@+id/txt_link_logo"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="link"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="@+id/img_logo"
        app:layout_constraintStart_toStartOf="@+id/img_logo"
        app:layout_constraintTop_toBottomOf="@+id/img_logo" />

    <TextView
        android:id="@+id/txt_linkdos_local"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="link"
        android:textSize="8sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_subir_img_local"
        app:layout_constraintTop_toBottomOf="@+id/txt_linktres_local" />

    <TextView
        android:id="@+id/txt_linktres_local"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="link"
        android:textSize="8sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_subir_img_local"
        app:layout_constraintTop_toBottomOf="@+id/txt_link_local" />


    <EditText
        android:id="@+id/edt_des_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:hint="Descripcion"
        android:inputType="textCapWords"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_nom_local" />

    <EditText
        android:id="@+id/edt_tel_local"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:hint="Telefono"
        android:inputType="phone"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/too_crear_local" />

    <EditText
        android:id="@+id/edt_dir_local"
        android:layout_width="513dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:hint="Direccion"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_des_local" />

    <CheckBox
        android:id="@+id/chb_garage_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Garage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_dir_local" />

    <CheckBox
        android:id="@+id/chb_tarjeta_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Tarjeta"
        app:layout_constraintStart_toEndOf="@+id/chb_garage_local"
        app:layout_constraintTop_toBottomOf="@+id/edt_dir_local" />

    <CheckBox
        android:id="@+id/chb_garantia_local"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Garantia"
        app:layout_constraintStart_toEndOf="@+id/chb_tarjeta_local"
        app:layout_constraintTop_toBottomOf="@+id/edt_dir_local" />

    <EditText
        android:id="@+id/edt_long_local"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:hint="longitud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chb_garantia_local"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/edt_lat_local"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:hint="latitud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_long_local"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/btn_img_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Imagen local"
        app:layout_constraintStart_toEndOf="@+id/btn_img_logo"
        app:layout_constraintTop_toBottomOf="@+id/edt_dir_local" />

    <Button
        android:id="@+id/btn_img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Imagen logo"
        app:layout_constraintStart_toEndOf="@+id/chb_garantia_local"
        app:layout_constraintTop_toBottomOf="@+id/edt_dir_local" />

    <ImageView
        android:id="@+id/img_local"
        android:layout_width="75dp"
        android:layout_height="77dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_choose_color_crear_local"
        android:background="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/img_local2"
        android:layout_width="75dp"
        android:layout_height="77dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toStartOf="@+id/img_local"
        app:layout_constraintTop_toBottomOf="@+id/img_choose_color_crear_local"
        android:background="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/img_local3"
        android:layout_width="75dp"
        android:layout_height="77dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintStart_toEndOf="@+id/img_logo"
        app:layout_constraintTop_toBottomOf="@+id/btn_img_local"
        android:background="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="81dp"
        android:layout_height="73dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        app:layout_constraintStart_toEndOf="@+id/chb_garantia_local"
        app:layout_constraintTop_toBottomOf="@+id/btn_img_logo"
        android:background="@color/colorPrimary"/>


    <EditText
        android:id="@+id/edt_etiquetas_local"
        android:layout_width="231dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="12dp"
        android:hint="Etiquetas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_add_etiquetas" />

    <TextView
        android:id="@+id/txt_etiquetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="12dp"
        android:text="Etiquetas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edt_etiquetas_local" />

    <Button
        android:id="@+id/btn_add_etiquetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="12dp"
        android:text="aÃ±adir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/btn_crear_nuevolocal"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"

        android:layout_marginRight="8dp"
        android:text="Crear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_subir_img_local" />

    <Button
        android:id="@+id/btn_cancelar_nuevolocal"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="cancelar"
        app:layout_constraintEnd_toStartOf="@+id/btn_crear_nuevolocal"
        app:layout_constraintTop_toBottomOf="@+id/btn_subir_img_local" />


    <Button
        android:id="@+id/img_choose_color_crear_local"
        android:layout_width="143dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="Selecciona Color"
        app:layout_constraintStart_toEndOf="@+id/edt_dir_local"
        app:layout_constraintTop_toBottomOf="@+id/edt_des_local" />

    <Button
        android:id="@+id/btn_subir_img_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Subir imagenes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_local" />


</android.support.constraint.ConstraintLayout>